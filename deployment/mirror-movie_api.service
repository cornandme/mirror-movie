[Unit]
Description=Gunicorn instance to serve 'mirror-movie API'
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/mirror-movie/api
ExecStart=/home/ubuntu/.local/bin/gunicorn --workers=2 --timeout=60 --bind 0.0.0.0:5000 --chdir /home/ubuntu/mirror-movie/api  wsgi:app
Restart=always

[Install]
WantedBy=multi-user.target